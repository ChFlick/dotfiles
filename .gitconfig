[diff]
	tool = meld
[merge]
	tool = meld
[core]
	editor = vim
[alias]
    amend = commit --amend
    b = branch
    c = commit
    co-pr = !sh -c 'git fetch $1 pull/$2/head:pr/$2 && git switch pr/$2' -
    f = fetch
    r = restore
    s = status -s
    st = status
    sub = submodule update --init --recursive                                                                                                                        
    sw = switch
    unstage = reset HEAD                                                               
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate
[commit]
	gpgsign = true
[pull]
	rebase = true
