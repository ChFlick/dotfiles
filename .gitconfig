[diff]
	tool = meld
[merge]
	tool = meld
[core]
	editor = vim
[alias]
	c = commit
    co-pr = !sh -c 'git fetch $1 pull/$2/head:pr/$2 && git switch pr/$2' -
	s = status -s
	st = status
    sub = submodule update --init --recursive
    sw = switch
	f = fetch
	amend = commit --amend
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate
	unstage = reset HEAD

[commit]
	gpgsign = true
[pull]
	rebase = true
